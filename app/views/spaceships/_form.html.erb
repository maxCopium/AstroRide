<%= simple_form_for(@spaceship) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, placeholder: 'Spaceship name' %>
    <%= f.input :category, as: :select, collection: ['Small', 'Medium', 'Large'], prompt: 'Select Category'%>
    <%= f.input :price, placeholder: "â‚¬" %>
    <%= f.input :location, placeholder: 'Location of your launch site' %>
    <%= f.input :photos, as: :file %>
  </div>

  <div class="form-actions d-flex justify-content-between mt-4">
    <%= link_to "Cancel", spaceships_path, class: "btn btn-danger"%>
    <%= f.button :submit, class: 'btn btn-gradient' %>
  </div>
<% end %>
