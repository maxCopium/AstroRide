<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to(root_path, class: "navbar-brand") do %>
          <i class="fa-solid fa-rocket fs-1" style="color: #ffffff; margin-left: 25px;"></i>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
     <div class="container">
        <div class="row justify-content-center">
          <div class="col-12 col-lg-6">
            <%= form_tag(spaceships_path, method: :get, class: "simple_form search") do %>
              <div class="search-form-control form-group">
                <%= text_field_tag(:query, params[:query], class: "form-control", placeholder: 'Search spaceships...') %>
                <button class="btn btn-flat" type="submit">
                  <i class="fas fa-search"></i>
                </button>
              </div>
            <% end %>
          </div>
        </div>
      </div>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
          <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fa-solid fa-user-astronaut fs-1", style="color: white; margin-right: 25px"></i>
          </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
  <div>
    <%= link_to "<i class='fas fa-home'></i> Home".html_safe, spaceships_path, class: "dropdown-item" %>
  </div>
  <div class="d-flex">
    <%= link_to "<i class='fas fa-rocket'></i> Rent a Spaceship".html_safe, new_spaceship_path, class: "dropdown-item" %>
  </div>
  <div>
    <%= link_to "<i class='fa-solid fa-folder'></i> My Spaceships".html_safe, profile_path, class: "dropdown-item" %>
  </div>
  <div>
    <%= link_to "<i class='fas fa-calendar'></i> My Bookings".html_safe, bookings_path, class: "dropdown-item" %>
  </div>
  <div>
    <%= link_to "<i class='fas fa-sign-out-alt'></i> Log out".html_safe, destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
  </div>
</div>

          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
